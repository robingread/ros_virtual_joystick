<library path="ros_virtual_joystick_rqt_plugin">
  <class name="Single Pad Plugin"
         type="ros_virtual_joystick::plugins::rqt_gui::SinglePadJoystickPlugin"
         base_class_type="rqt_gui_cpp::Plugin">
    <description>My RQT plugin in C++</description>
    <qtgui>
      <group>
        <label>Joystick</label>
        <icon type="theme">folder</icon>
        <statustip>Plugins related to Joysticks.</statustip>
      </group>
      <label>Single Pad Joystick</label>
      <icon type="theme">input-gaming</icon>
    </qtgui>
  </class>

  <class name="Dual Pad Plugin"
         type="ros_virtual_joystick::plugins::rqt_gui::DualPadJoystickPlugin"
         base_class_type="rqt_gui_cpp::Plugin">
    <description>My RQT plugin in C++</description>
    <qtgui>
      <group>
        <label>Joystick</label>
        <icon type="theme">folder</icon>
        <statustip>Plugins related to Joysticks.</statustip>
      </group>
      <label>Dual Pad Joystick</label>
      <icon type="theme">input-gaming</icon>
    </qtgui>
  </class>
</library>
